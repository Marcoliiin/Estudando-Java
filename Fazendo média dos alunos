import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        System.out.println("Informe a quantidade de notas que você vai comparar:");

        Scanner sc = new Scanner(System.in);
        int[] nota = new int[sc.nextInt()];
int tamanho = nota.length;

        float soma = 0;

        for (int i = 0; i < nota.length; i++) {
            System.out.println("Escreva uma nota");
            nota[i] = sc.nextInt();
            soma += nota[i];
        }

        System.out.println("Quer adicionar mais algum aluno?");
        sc = new Scanner(System.in);
        String resposta = sc.nextLine();

        switch (resposta) {
            case "Sim":
                System.out.println("Quantos alunos você quer adicionar?");
                nota = new int[sc.nextInt()];

                float soma2 = 0;

                for (int i = 0; i < nota.length; i++) {
                    System.out.println("Escreva uma nota");
                    nota[i] = sc.nextInt();
                    soma2 += nota[i];
                }

                float media = (soma + soma2) / (nota.length + tamanho);
                System.out.println("A média das notas da sua turma é: " + media);
                break;

            case "Não":
                media = soma / nota.length;
                System.out.println("A média dos seus alunos é: " + media);
                break;

            default:
                System.out.println("Esta não é uma opção válida");
        }

    }
}
